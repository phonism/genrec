# Base configuration for GenRec
# This file defines common macros for model paths.
#
# You can override these paths in two ways:
# 1. Set environment variables before running:
#    export MODEL_HUB=/path/to/your/models
#    Then use: MODEL_HUB_SENTENCE_T5_XL = "${MODEL_HUB}/sentence-t5-xl"
#
# 2. Override via command line:
#    --gin "MODEL_HUB_SENTENCE_T5_XL='/your/path/sentence-t5-xl'"
#
# Default values use HuggingFace model identifiers for automatic download.

# Sentence-T5 models (for text encoding)
MODEL_HUB_SENTENCE_T5_BASE = "sentence-transformers/sentence-t5-base"
MODEL_HUB_SENTENCE_T5_XL = "sentence-transformers/sentence-t5-xl"

# LLM models (for LCRec/NoteLLM)
MODEL_HUB_QWEN3_1_7B = "Qwen/Qwen2.5-1.5B"
